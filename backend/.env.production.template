# Production Environment Variables Template
# Copy this to .env.production and fill in your actual values

# Database Configuration (Choose one)
# Option 1: PostgreSQL (Supabase, Railway, Neon)
DATABASE_URL=postgresql://username:password@host:port/database_name

# Option 2: MySQL (PlanetScale, local MySQL)
# DB_HOST=your_host
# DB_USER=your_username
# DB_PASSWORD=your_password
# DB_NAME=skillbridge_db
# DB_PORT=3306

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_make_it_long_and_random
JWT_EXPIRES_IN=7d

# Email Configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Google OAuth (for authentication)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Server Configuration
PORT=3001
NODE_ENV=production

# Frontend URL (for CORS)
FRONTEND_URL=https://your-frontend-domain.vercel.app

# Optional: Redis for caching
REDIS_URL=redis://localhost:6379

# Optional: File storage (AWS S3, Cloudinary)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
S3_BUCKET_NAME=skillbridge-uploads

# Optional: Monitoring
SENTRY_DSN=your_sentry_dsn
